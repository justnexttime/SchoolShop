<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/good_goods_name"
        android:text="商品"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_Lin"
        android:layout_below="@+id/good_goods_name"
        android:layout_marginBottom="20dp">


    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_Lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_total_money"
            android:textSize="20dp"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/buy_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_buy_box"
            android:padding="10dp"
            android:text="结  账"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_margin="10dp"
            />
    </RelativeLayout>

</RelativeLayout>